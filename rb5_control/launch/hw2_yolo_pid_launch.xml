<launch>
    <node 
        pkg="rb5_vision" 
        exec="yolo_camera_node" 
        name="yolo_camera_node" 
        output="screen">
        <param name="camera_id" value="0" />
        <param name="topic_name" value="/camera_0" />
        <param name="frame_rate" value="30" />
    </node>

    <node 
        pkg="rb5_controller" 
        exec="pid_controller" 
        name="pid_controller_node" 
        output="screen">
        <param name="Kp" value="0.02" />
        <param name="Ki" value="0.005" />
        <param name="Kd" value="0.005" />
    </node>
</launch>
